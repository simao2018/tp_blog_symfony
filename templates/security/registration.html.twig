{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription sur le site</h1>

    {{ form_start(form) }}
    {{ form_row(form.username, {'label': 'Nom d\'utilisateur','attr': 
    {'placeholder': 'Nom complet' }}) }}
    {{ form_row(form.email, {'label': 'adresse email','attr': 
    {'placeholder': 'adresse email ...' }}) }}
    {{ form_row(form.password, {'label': 'Mot de passe ...','attr': 
    {'placeholder': 'Mot de passe !' }}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe ...','attr': 
    {'placeholder': 'Mot de passe !' }}) }}

    


    <button type="submit" class="btn btn-success">Inscription!</button>
    {{ form_end(form) }}
{% endblock %}