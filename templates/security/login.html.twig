{% extends 'base.html.twig' %}

{% block body %}
    <h1>Se connecter</h1>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    </form>
    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <label for="username">Adresse email</label>
            <input type="email" class="form-control" id="username" name="_username" aria-describedby="emailHelp" placeholder="Entrer vore email ..." value="{{ last_username }}">
            <small id="emailHelp" class="form-text text-muted">Ne jamais partager son email avec d'autres personne.</small>
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" class="form-control" id="password" name="_password" placeholder="Entrer votre mot de passe">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Se souvenir de moi</label>
        </div>
        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}
        <button type="submit" class="btn btn-primary">login</button>
    </form>
{% endblock %}